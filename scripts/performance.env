# Оптимизированные настройки для максимального RPS
# HTTP Server
SERVER_ADDRESS=:8081
SERVER_READ_TIMEOUT=5s
SERVER_WRITE_TIMEOUT=5s
SERVER_IDLE_TIMEOUT=30s
SERVER_SHUTDOWN_TIMEOUT=10s
SERVER_MAX_HEADER_BYTES=4096

# Kafka Producer - агрессивная оптимизация
KAFKA_BROKER_LIST=localhost:9092
KAFKA_TOPIC=events
KAFKA_CLIENT_ID=producer-service-perf
KAFKA_BATCH_SIZE=1000
KAFKA_BATCH_TIMEOUT=1ms
KAFKA_MAX_RETRIES=1
KAFKA_RETRY_BACKOFF=10ms
KAFKA_COMPRESSION=lz4
KAFKA_REQUIRED_ACKS=0

# Logging - минимум для производительности
LOG_LEVEL=warn
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=:9090
METRICS_PATH=/metrics

# App
APP_NAME=producer-service
APP_VERSION=1.0.0
APP_ENV=performance
APP_DEBUG=false

# Go runtime optimization
GOGC=100
GOMAXPROCS=0
GOMEMLIMIT=16GiB 